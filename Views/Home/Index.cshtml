@{
    ViewData["Title"] = "Welcome to CMCS";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold mb-2">Contract Monthly Claim System</h1>
        <p class="text-muted lead">Streamlined claim management for academic staff</p>
    </div>

    @if (string.IsNullOrEmpty(Context.Session.GetString("UserRole")))
    {
        <!-- NOT LOGGED IN -->
        <div class="row g-4 mb-5">

            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm text-center h-100 p-3">
                    <h5 class="fw-semibold mb-1">Lecturers</h5>
                    <p class="small text-muted">Submit & track claims</p>
                </div>
            </div>

            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm text-center h-100 p-3">
                    <h5 class="fw-semibold mb-1">Coordinators</h5>
                    <p class="small text-muted">Verify claims for accuracy</p>
                </div>
            </div>

            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm text-center h-100 p-3">
                    <h5 class="fw-semibold mb-1">Managers</h5>
                    <p class="small text-muted">Final approval & reporting</p>
                </div>
            </div>

            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm text-center h-100 p-3">
                    <h5 class="fw-semibold mb-1">Human Resources</h5>
                    <p class="small text-muted">Manage lecturers & modules</p>
                </div>
            </div>

        </div>

        <div class="text-center mt-4">
            <a asp-controller="Login" asp-action="Index" class="btn btn-primary btn-lg px-4">
                Login to Continue
            </a>
        </div>
    }
    else
    {
        <!-- LOGGED IN -->
        <div class="alert alert-light border shadow-sm text-center mb-4">
            <h5 class="fw-semibold mb-1">
                Welcome back, @Context.Session.GetString("UserName")!
            </h5>

            <p class="mb-0 text-muted">
                Role: <span class="badge bg-primary">@Context.Session.GetString("UserRole")</span>
            </p>
        </div>

        <div class="text-center mt-4">

            @{
                var role = Context.Session.GetString("UserRole");
            }

            @if (role == "Lecturer")
            {
                <a asp-controller="Lecturer" asp-action="Index" class="btn btn-success btn-lg me-3">
                    My Claims
                </a>
            }
            else if (role == "Coordinator")
            {
                <a asp-controller="Coordinator" asp-action="Index" class="btn btn-warning btn-lg me-3">
                    Dashboard
                </a>
            }
            else if (role == "Manager")
            {
                <a asp-controller="Manager" asp-action="Index" class="btn btn-primary btn-lg me-3">
                    Manager Dashboard
                </a>
            }
            else if (role == "HR")
            {
                <a asp-controller="HR" asp-action="Index" class="btn btn-info btn-lg me-3">
                    HR Dashboard
                </a>
            }

            <a asp-controller="Login" asp-action="Logout" class="btn btn-outline-secondary btn-lg">
                Logout
            </a>
        </div>
    }
</div>

<style>
    .card {
        border-radius: 12px;
        transition: 0.25s ease;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 0.5rem 1.25rem rgba(0,0,0,.12) !important;
        }
</style>
