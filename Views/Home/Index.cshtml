@{
    ViewData["Title"] = "Welcome to CMCS";
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-100">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow-lg">
                <div class="card-body p-5 text-center">
                    <h1 class="display-4 mb-4">Contract Monthly Claim System</h1>
                    <p class="lead text-muted mb-4">Streamlined claims management for academic institutions</p>

                    @if (string.IsNullOrEmpty(Context.Session.GetString("UserRole")))
                    {
                        <!-- Role Cards for Non-Logged In Users -->
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <div class="card h-100 border-success">
                                    <div class="card-body text-center">
                                        <div class="mb-3">
                                            <i class="bi bi-person-circle text-success" style="font-size: 3rem;"></i>
                                        </div>
                                        <h5 class="card-title">Lecturers</h5>
                                        <p class="card-text">Submit and track your monthly claims</p>
                                        <ul class="list-unstyled small text-muted">
                                            <li>✓ Submit claims</li>
                                            <li>✓ Upload documents</li>
                                            <li>✓ Track status</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="card h-100 border-warning">
                                    <div class="card-body text-center">
                                        <div class="mb-3">
                                            <i class="bi bi-clipboard-check text-warning" style="font-size: 3rem;"></i>
                                        </div>
                                        <h5 class="card-title">Coordinators</h5>
                                        <p class="card-text">Verify claims for accuracy</p>
                                        <ul class="list-unstyled small text-muted">
                                            <li>✓ Review claims</li>
                                            <li>✓ Verify details</li>
                                            <li>✓ Approve/Reject</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="card h-100 border-primary">
                                    <div class="card-body text-center">
                                        <div class="mb-3">
                                            <i class="bi bi-shield-check text-primary" style="font-size: 3rem;"></i>
                                        </div>
                                        <h5 class="card-title">Managers</h5>
                                        <p class="card-text">Final approval and reporting</p>
                                        <ul class="list-unstyled small text-muted">
                                            <li>✓ Final approval</li>
                                            <li>✓ View reports</li>
                                            <li>✓ System oversight</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="card h-100 border-info">
                                    <div class="card-body text-center">
                                        <div class="mb-3">
                                            <i class="bi bi-people-fill text-info" style="font-size: 3rem;"></i>
                                        </div>
                                        <h5 class="card-title">Human Resources</h5>
                                        <p class="card-text">Manage lecturers and modules</p>
                                        <ul class="list-unstyled small text-muted">
                                            <li>✓ Add lecturers</li>
                                            <li>✓ Assign modules</li>
                                            <li>✓ Set rates</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <a asp-controller="Login" asp-action="Index" class="btn btn-primary btn-lg px-5">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Get Started - Login
                        </a>
                    }
                    else
                    {
                        <!-- Welcome Message for Logged In Users -->
                        <div class="alert alert-info border-0 shadow-sm">
                            <h5 class="mb-2">
                                <i class="bi bi-person-check-fill me-2"></i>
                                Welcome back, @Context.Session.GetString("UserName")!
                            </h5>
                            <p class="mb-0">
                                You are logged in as:
                                <span class="badge bg-primary fs-6">@Context.Session.GetString("UserRole")</span>
                            </p>
                        </div>

                        <div class="mt-4">
                            @{
                                var role = Context.Session.GetString("UserRole");
                            }

                            @if (role == "Lecturer")
                            {
                                <a asp-controller="Lecturer" asp-action="Index" class="btn btn-success btn-lg me-3">
                                    <i class="bi bi-clipboard-data me-2"></i>Go to My Claims
                                </a>
                            }
                            else if (role == "Coordinator")
                            {
                                <a asp-controller="Coordinator" asp-action="Index" class="btn btn-warning btn-lg me-3">
                                    <i class="bi bi-speedometer2 me-2"></i>Go to Dashboard
                                </a>
                            }
                            else if (role == "Manager")
                            {
                                <a asp-controller="Manager" asp-action="Index" class="btn btn-primary btn-lg me-3">
                                    <i class="bi bi-speedometer2 me-2"></i>Go to Dashboard
                                </a>
                            }
                            else if (role == "HR")
                            {
                                <a asp-controller="HR" asp-action="Index" class="btn btn-info btn-lg me-3">
                                    <i class="bi bi-person-gear me-2"></i>Go to HR Dashboard
                                </a>
                            }

                            <a asp-controller="Login" asp-action="Logout" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons if not already included -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-title {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .list-unstyled li {
        padding: 0.25rem 0;
    }
</style>