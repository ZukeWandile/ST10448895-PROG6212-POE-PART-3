@{
    ViewData["Title"] = "Assign Module";
    var lecturers = ViewBag.Lecturers as List<ST10448895_CMCS_PROG.Models.LecturerModel> ?? new List<ST10448895_CMCS_PROG.Models.LecturerModel>();
    var modules = ViewBag.Modules as List<ST10448895_CMCS_PROG.Models.Module> ?? new List<ST10448895_CMCS_PROG.Models.Module>();
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Assign Module & Set Rate</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <form asp-action="AssignModule" method="post">
                        <div class="mb-3">
                            <label class="form-label">Select Lecturer</label>
                            <select name="lecturerId" class="form-select" required>
                                <option value="">-- Choose Lecturer --</option>
                                @foreach (var lecturer in lecturers)
                                {
                                    <option value="@lecturer.Id">@lecturer.Name</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Select Module</label>
                            <select name="moduleId" class="form-select" required>
                                <option value="">-- Choose Module --</option>
                                @foreach (var module in modules)
                                {
                                    <option value="@module.Id">@module.ModuleCode - @module.ModuleName</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hourly Rate (R)</label>
                            <input name="hourlyRate" class="form-control" type="number" step="0.01" min="50" max="5000" required>
                            <small class="form-text text-muted">Rate must be between R50 and R5000</small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success">Assign</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>