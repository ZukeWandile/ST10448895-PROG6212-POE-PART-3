@model ST10448895_CMCS_PROG.Models.LecturerModule

@{
    ViewData["Title"] = "Update Rate";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Update Hourly Rate</h4>
                </div>
                <div class="card-body">
                    <p><strong>Lecturer:</strong> @Model.Lecturer?.Name</p>
                    <p><strong>Module:</strong> @Model.Module?.ModuleCode - @Model.Module?.ModuleName</p>
                    <p><strong>Current Rate:</strong> @Model.HourlyRate.ToString("C")</p>

                    <form asp-action="UpdateRate" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label">New Hourly Rate (R)</label>
                            <input name="hourlyRate" class="form-control" type="number" step="0.01" min="50" max="5000" value="@Model.HourlyRate" required>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="LecturerDetails" asp-route-id="@Model.LecturerId" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>