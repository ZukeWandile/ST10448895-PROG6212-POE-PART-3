@model IEnumerable<ST10448895_CMCS_PROG.Models.Module>

@{
    ViewData["Title"] = "Manage Modules";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Manage Modules</h2>
        <div>
            <a asp-action="CreateModule" class="btn btn-primary">Add Module</a>
            <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="card">
        <div class="card-header">
            <h5>All Modules</h5>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <p class="text-muted">No modules created yet.</p>
            }
            else
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Module Code</th>
                            <th>Module Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var module in Model)
                        {
                            <tr>
                                <td><strong>@module.ModuleCode</strong></td>
                                <td>@module.ModuleName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>