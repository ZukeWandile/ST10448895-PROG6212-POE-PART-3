@model IEnumerable<ST10448895_CMCS_PROG.Models.LecturerModel>

@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container mt-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>HR Dashboard</h2>
            <p class="text-muted mb-0">Welcome, @ViewBag.HRName</p>
        </div>
        <div>
            <a asp-action="CreateLecturer" class="btn btn-primary me-2">
                <i class="bi bi-plus-circle"></i> Add Lecturer
            </a>
            <a asp-action="Modules" class="btn btn-info me-2">
                <i class="bi bi-book"></i> Manage Modules
            </a>
            <a asp-action="AssignModule" class="btn btn-success me-2">
                <i class="bi bi-link"></i> Assign Module
            </a>
            <a asp-controller="Login" asp-action="Logout" class="btn btn-outline-secondary">
                <i class="bi bi-box-arrow-right"></i> Logout
            </a>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Quick Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h3 class="text-primary">@Model.Count()</h3>
                    <p class="mb-0">Total Lecturers</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-success">
                <div class="card-body text-center">
                    <h3 class="text-success">@Model.Sum(l => l.LecturerModules.Count)</h3>
                    <p class="mb-0">Module Assignments</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-info">
                <div class="card-body text-center">
                    <h3 class="text-info">@Model.Count(l => l.LecturerModules.Any())</h3>
                    <p class="mb-0">Active Lecturers</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Lecturers Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">All Lecturers</h5>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-person-x display-1 text-muted"></i>
                    <h4 class="text-muted mt-3">No Lecturers Found</h4>
                    <p class="text-muted">Start by adding a new lecturer to the system.</p>
                    <a asp-action="CreateLecturer" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add Your First Lecturer
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Department</th>
                                <th>Assigned Modules</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lecturer in Model)
                            {
                                <tr>
                                    <td><span class="badge bg-secondary">#@lecturer.Id</span></td>
                                    <td>
                                        <strong>@lecturer.Name</strong>
                                    </td>
                                    <td>
                                        <a href="mailto:@lecturer.Email">@lecturer.Email</a>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(lecturer.Department))
                                        {
                                            <span class="badge bg-info">@lecturer.Department</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var moduleCount = (int)(ViewData[$"ModuleCount_{lecturer.Id}"] ?? 0);
                                        }
                                        @if (moduleCount > 0)
                                        {
                                            <span class="badge bg-success">@moduleCount Module(s)</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">No modules</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="LecturerDetails"
                                               asp-route-id="@lecturer.Id"
                                               class="btn btn-sm btn-outline-info"
                                               title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="EditLecturer"
                                               asp-route-id="@lecturer.Id"
                                               class="btn btn-sm btn-outline-primary"
                                               title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button"
                                                    class="btn btn-sm btn-outline-danger"
                                                    onclick="confirmDelete(@lecturer.Id, '@lecturer.Name')"
                                                    title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary Footer -->
                <div class="card-footer bg-light">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <small class="text-muted">Total Lecturers:</small>
                            <strong class="d-block">@Model.Count()</strong>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted">With Modules:</small>
                            <strong class="d-block">@Model.Count(l => l.LecturerModules.Any())</strong>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted">Without Modules:</small>
                            <strong class="d-block">@Model.Count(l => !l.LecturerModules.Any())</strong>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Quick Actions Card -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <a asp-action="CreateLecturer" class="btn btn-outline-primary w-100 mb-2">
                                <i class="bi bi-person-plus-fill d-block fs-3 mb-2"></i>
                                Add New Lecturer
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="CreateModule" class="btn btn-outline-info w-100 mb-2">
                                <i class="bi bi-book-half d-block fs-3 mb-2"></i>
                                Create Module
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="AssignModule" class="btn btn-outline-success w-100 mb-2">
                                <i class="bi bi-link-45deg d-block fs-3 mb-2"></i>
                                Assign Module
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="Modules" class="btn btn-outline-secondary w-100 mb-2">
                                <i class="bi bi-grid-3x3-gap d-block fs-3 mb-2"></i>
                                View All Modules
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong id="lecturerName"></strong>?</p>
                <p class="text-danger mb-0">
                    <i class="bi bi-exclamation-triangle"></i>
                    This action cannot be undone. All module assignments will also be removed.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete Lecturer</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    .card {
        border: none;
        border-radius: 8px;
    }

    .card-header {
        border-radius: 8px 8px 0 0 !important;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .btn-group .btn {
        padding: 0.25rem 0.5rem;
    }

    .badge {
        font-weight: 500;
    }
</style>

<!-- Scripts -->
<script>
    function confirmDelete(lecturerId, lecturerName) {
        document.getElementById('lecturerName').textContent = lecturerName;
        document.getElementById('deleteForm').action = '/HR/DeleteLecturer/' + lecturerId;

        var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        deleteModal.show();
    }

    // Auto-hide alerts after 5 seconds
    setTimeout(function() {
        var alerts = document.querySelectorAll('.alert');
        alerts.forEach(function(alert) {
            var bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        });
    }, 5000);
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}