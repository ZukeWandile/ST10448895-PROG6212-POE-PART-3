@model IEnumerable<ST10448895_CMCS_PROG.Models.LecturerModel>
@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>HR Dashboard</h2>
            <p class="text-muted">Welcome, @ViewBag.HRName</p>
        </div>
        <a asp-action="Logout" asp-controller="Login" class="btn btn-outline-danger">
            Logout
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Quick Action Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mt-3">Manage Users</h5>
                    <p class="card-text">Create and manage user accounts for all roles</p>
                    <a asp-action="ManageUsers" class="btn btn-primary">
                        Manage Users
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mt-3">Manage Modules</h5>
                    <p class="card-text">Create and manage course modules</p>
                    <a asp-action="Modules" class="btn btn-success">
                        View Modules
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mt-3">Reports & Analytics</h5>
                    <p class="card-text">View reports and download invoices</p>
                    <a asp-action="Reports" class="btn btn-info">
                        View Reports
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mt-3">Assign Modules</h5>
                    <p class="card-text">Assign modules to lecturers with rates</p>
                    <a asp-action="AssignModule" class="btn btn-warning">
                        Assign Modules
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Lecturers Overview -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Lecturers Overview</h5>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <h5>No lecturers found</h5>
                    <p>Create user accounts with the "Lecturer" role to get started.</p>
                    <a asp-action="CreateUser" class="btn btn-primary">
                        Create First Lecturer
                    </a>
                </div>
            }
            else
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Modules Assigned</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var lecturer in Model)
                        {
                            <tr>
                                <td>@lecturer.Name</td>
                                <td>@lecturer.Email</td>
                                <td>@(lecturer.Department ?? "N/A")</td>
                                <td>
                                    <span class="badge bg-info">
                                        @ViewData[$"ModuleCount_{lecturer.Id}"] module(s)
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="LecturerDetails" asp-route-id="@lecturer.Id"
                                       class="btn btn-sm btn-outline-primary">
                                        Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
