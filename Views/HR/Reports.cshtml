@model ST10448895_CMCS_PROG.Models.ViewModels.HRReportsViewModel
@{
    ViewData["Title"] = "Reports & Analytics";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Reports & Analytics</h2>
        <a asp-action="Index" class="btn btn-secondary">
            Back to Dashboard
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="text-muted">Total Claims</h5>
                    <h2 class="text-primary">@Model.TotalClaims</h2>
                    <p class="mb-0">@Model.TotalAmount.ToString("C")</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="text-muted">Pending</h5>
                    <h2 class="text-warning">@Model.PendingClaims</h2>
                    <p class="mb-0">@Model.PendingAmount.ToString("C")</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="text-muted">Approved</h5>
                    <h2 class="text-success">@Model.ApprovedClaims</h2>
                    <p class="mb-0">@Model.ApprovedAmount.ToString("C")</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="text-muted">Rejected</h5>
                    <h2 class="text-danger">@Model.RejectedClaims</h2>
                    <p class="mb-0">All Time</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Download Buttons -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Download Reports</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <h5 class="mt-3">All Claims Report</h5>
                            <p class="text-muted">Complete report of all claims with status</p>
                            <a asp-action="DownloadAllClaimsPDF" class="btn btn-danger">
                                Download PDF
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <h5 class="mt-3">Approved Claims Invoice</h5>
                            <p class="text-muted">Payment invoice for approved claims</p>
                            <a asp-action="DownloadApprovedInvoice" class="btn btn-success">
                                Download Invoice
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Claims -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-info text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Claims</h5>
                <a asp-action="AllClaims" class="btn btn-sm btn-light">View All Claims</a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Lecturer</th>
                            <th>Hours</th>
                            <th>Rate</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model.RecentClaims)
                        {
                            <tr>
                                <td><strong>#@claim.ClaimId</strong></td>
                                <td>@claim.LecturerName</td>
                                <td>@claim.HoursWorked hrs</td>
                                <td>@claim.HourlyRate.ToString("C")</td>
                                <td><strong>@claim.TotalAmount.ToString("C")</strong></td>
                                <td>
                                    @{
                                        string badgeClass = claim.Status switch
                                        {
                                            "Approved" => "bg-success",
                                            "Verified" => "bg-info",
                                            "Rejected" => "bg-danger",
                                            _ => "bg-warning text-dark"
                                        };
                                    }
                                    <span class="badge @badgeClass">@claim.Status</span>
                                </td>
                                <td>@claim.SubmitDate.ToString("dd MMM yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

   
</div>
