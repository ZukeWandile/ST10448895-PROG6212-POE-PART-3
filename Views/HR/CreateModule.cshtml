@model ST10448895_CMCS_PROG.Models.Module

@{
    ViewData["Title"] = "Create Module";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Create New Module</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateModule" method="post">
                        <div class="mb-3">
                            <label asp-for="ModuleCode" class="form-label">Module Code</label>
                            <input asp-for="ModuleCode" class="form-control" required>
                            <small class="form-text text-muted">e.g., PROG6212</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ModuleName" class="form-label">Module Name</label>
                            <input asp-for="ModuleName" class="form-control" required>
                            <small class="form-text text-muted">e.g., Programming 2B</small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Modules" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
